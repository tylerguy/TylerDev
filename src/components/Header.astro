---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../config";

import siteIcon from "../assets/favicon.ico";
---

<header data-header transition:persist>
  <a href="/">
    <img src={siteIcon} alt="site icon" id="favicon" />
  </a>
  <nav id="Main-Header">
    <HeaderLink href="/">Home</HeaderLink>
    <!--<HeaderLink href="/blog">Blog</HeaderLink>-->
    <HeaderLink href="/portfolio">Portfolio</HeaderLink>
    <div class="hamburger">
      <span class="line"></span>
      <span class="line"></span>
      <span class="line"></span>
    </div>
  </nav>
</header>
<style>
  @media only screen and (max-width: 600px) {
    header {
      flex-direction: column;
      height: fit-content;
      width: 100%;
      padding: 25px 0 25px 0;
    }

    #Main-Header {
      flex-direction: column;
    }
  }

  @media only screen and (min-width: 600px) {
    header {
      flex-direction: row;
      margin: 25px 50px;
      padding: 20px;
    }
  }

  header {
    display: flex;
    font-family: "Source Code Pro", monospace;
    background-color: #313244;
    align-items: center;
    justify-content: space-between;
  }

  #favicon {
    aspect-ratio: 1/1;
    width: 100px;
    height: 100px;
    border-radius: 30%;
  }

  #favicon:hover {
    cursor: pointer;
    transition: ease-in-out 0.5s;
    transform: scale(1.1);
  }

  h1 {
    margin: 10px 0;
    padding: 0;
    font-size: 2em;
    color: #ffb86c;
  }

  #Main-Header {
    display: flex;
    flex-direction: row;
  }

  svg {
    font-size: 1.2em;
    margin: 0;
  }
</style>
